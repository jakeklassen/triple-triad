    "comment-json": "4.2.3",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "esno": "0.16.3",
    "expect": "29.3.1",
    "prettier": "2.7.1",
