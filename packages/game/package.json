{
  "name": "@tripletriad/game",
  "version": "0.1.0",
  "description": "Triple Triad headless game engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/tripletriad.git"
  },
  "scripts": {
    "lint": "eslint src --ext .js,.ts --config .eslintrc.cjs",
    "prebuild": "npm run clean",
    "build": "npm run lint && tsup src --format cjs,esm --dts-resolve",
    "build:watch": "nodemon --exec 'npm run build || exit 1'",
    "test": "vitest",
    "pretest:coverage": "npm run clean",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "script": "vite-node src/lib/perform-card-cascade.ts"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "keywords": [
    "triple triad",
    "library",
    "typescript"
  ],
  "devDependencies": {
    "@types/benchmark": "^2.1.0",
    "@types/eslint": "^8.4.10",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@vitest/coverage-c8": "0.25.3",
    "@vitest/ui": "0.25.3",
    "benchmark": "^2.1.4",
    "bumpp": "8.2.1",
    "denoify": "1.4.2",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "4.2.1",
    "just-split": "3.1.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "type-fest": "3.2.0",
    "typescript": "^4.9.3",
    "vite": "3.2.4",
    "vite-node": "0.25.3",
    "vitest": "^0.25.3"
  },
  "dependencies": {
    "just-group-by": "2.1.2",
    "just-random-integer": "4.1.1",
    "just-shuffle": "4.1.1"
  }
}
