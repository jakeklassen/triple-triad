{
  "name": "@tripletriad/game",
  "version": "0.1.0",
  "description": "Triple Triad headless game engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jakeklassen/tripletriad.git"
  },
  "scripts": {
    "lint": "eslint src --ext .js,.ts --config .eslintrc.cjs",
    "prebuild": "npm run clean",
    "build": "npm run lint && tsup src --format cjs,esm --dts-resolve",
    "build:watch": "nodemon --exec 'npm run build || exit 1'",
    "test": "vitest",
    "pretest:coverage": "npm run clean",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "script": "vite-node src/lib/perform-card-cascade.ts"
  },
  "author": "Jake Klassen <jklassendev@gmail.com>",
  "license": "MIT",
  "keywords": [
    "triple triad",
    "library",
    "typescript"
  ],
  "devDependencies": {
    "@types/benchmark": "^2.1.0",
    "@types/eslint": "^8.4.5",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vitest/coverage-c8": "0.23.4",
    "@vitest/ui": "0.23.4",
    "benchmark": "^2.1.4",
    "bumpp": "8.2.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.0",
    "ts-node": "^10.9.1",
    "type-fest": "3.0.0",
    "typescript": "^4.7.4",
    "vite": "3.1.3",
    "vite-node": "0.23.4",
    "vitest": "^0.23.4"
  },
  "dependencies": {
    "just-shuffle": "4.1.1",
    "tsup": "^6.2.2"
  }
}
